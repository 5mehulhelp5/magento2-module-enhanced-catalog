<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog">
            <group id="frontend">
                <field id="default_sort_order" translate="label comment" type="select" sortOrder="6" showInDefault="1"
                       showInWebsite="1" showInStore="1" canRestore="1">
                    <frontend_class>magedin-enhanced-catalog-config-field</frontend_class>
                    <label>Product Listing Default Sort Order</label>
                    <comment>Defines the default sort order for the product listing page.</comment>
                    <source_model>MagedIn\EnhancedCatalog\Model\Config\Source\SortOrder</source_model>
                </field>
                <!-- Just Reorder the Fields -->
                <field id="list_allow_all" sortOrder="10"/>
                <field id="remember_pagination" sortOrder="20"/>
            </group>
        </section>
    </system>
</config>
